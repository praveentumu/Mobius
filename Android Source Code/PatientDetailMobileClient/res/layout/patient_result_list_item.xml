<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large" >

        <TextView
            android:id="@+id/txtFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/padding_medium"
         
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/listtext_fontsize" />

        <TextView
            android:id="@+id/textSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtFirstName"
            android:padding="@dimen/padding_medium"
          
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/listtext_fontsize" />

        <TextView
            android:id="@+id/textDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/padding_medium"
           
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/listtext_fontsize" />

        <TextView
            android:id="@+id/textAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textSex"
            android:layout_alignBottom="@+id/textSex"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/txtFirstName"
          
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:textSize="@dimen/listtext_fontsize" />
        
        <TextView
            android:id="@+id/textCommunity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textSex"
            android:padding="@dimen/padding_medium"
          
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/listtext_fontsize" />

    </RelativeLayout>
